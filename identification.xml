    <topic name="ASKAGE">
        <category>
        <pattern>SECRET TRIGGER</pattern>
            <template>
                <random>
                    <li>How old are you?</li>
                    <li>What's your age?</li>
                </random>
            </template>
        </category>
        <category>
            <pattern>I AM * YEARS OLD</pattern>
            <template>
                <think>
                    <set name="age"><star/></set>
                </think>
            </template>
        </category>
        <category>
            <pattern>MY AGE IS * </pattern>
            <template>
                <srai>I AM <star></star> YEARS OLD</srai>
            </template>
        </category>

        <!-- NAME IS SET, NEED TO VERIFY IF AGE AND -->
    </topic>

    <topic name="CONFIRM">
        <category>
            <pattern>SECRET TRIGGER</pattern>
            <template>
                So you are <get name="age"/> years old and work as <get name="job"/>, right?
            </template>
        </category>
        <category>
            <pattern>YES</pattern>
            <template>
                <think><set name="conf">TRUE</set></think>
            </template>
        </category>

        <category>
            <pattern>NO</pattern>
            <template>
                <think><set name="conf">FALSE</set></think>
            </template>
        </category>
    </topic>


